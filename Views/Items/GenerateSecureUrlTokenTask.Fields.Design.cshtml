@using PropertyBrokers.OrchardCore.WorkflowAdditions.GenerateSecureUrlToken
@model ActivityViewModel<GenerateSecureUrlTokenTask>

<header>
    <h4><i class="fa fa-key" aria-hidden="true"></i>@Model.Activity.GetTitleOrDefault(() => T["Generate Secure URL Token"])</h4>
</header>

<div class="px-4">
    <div class="row mb-3">
        <div class="col-sm-3">
            <label asp-for="@Model.Activity.Email">@T["Email"]</label>
        </div>
        <div class="col-sm-9">
            <code>@Model.Activity.Email.Expression</code>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-3">
            <label asp-for="@Model.Activity.ValidityInHours">@T["Validity"]</label>
        </div>
        <div class="col-sm-9">
            <code>@Model.Activity.ValidityInHours.Expression</code> @T["hours"]
        </div>
    </div>
</div>