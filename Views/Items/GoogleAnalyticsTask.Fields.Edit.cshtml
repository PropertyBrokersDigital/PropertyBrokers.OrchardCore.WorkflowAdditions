@using PropertyBrokers.OrchardCore.WorkflowAdditions.GoogleAnalytics;

@model GoogleAnalyticsTaskViewModel

<div class="mb-3">
    <label asp-for="MeasurementId" class="form-label">@T["Measurement ID"]</label>
    <input type="text" asp-for="MeasurementId" class="form-control" />
    <span class="hint">@T["The Google Analytics 4 Measurement ID (starts with 'G-'). You can find this in your GA4 property settings under Admin > Property > Data Streams."]</span>
</div>

<div class="mb-3">
    <label asp-for="ApiSecret" class="form-label">@T["API Secret"]</label>
    <input type="password" asp-for="ApiSecret" class="form-control" />
    <span class="hint">@T["The API Secret for your GA4 property."]</span>
</div>

<div class="mb-3">
    <label asp-for="ClientId" class="form-label">@T["Client ID"]</label>
    <input type="text" asp-for="ClientId" class="form-control" />
    <span class="hint">@T["A unique identifier for the user or device. This should be consistent across events for the same user. You can use workflow expressions here to dynamically generate or retrieve a Client ID."]</span>
</div>

<div class="mb-3">
    <label asp-for="EventName" class="form-label">@T["Event Name"]</label>
    <input type="text" asp-for="EventName" class="form-control" />
    <span class="hint">@T["The name of the event to trigger."]</span>
</div>

<div class="mb-3">
    <label asp-for="EventParameters" class="form-label">@T["Event Parameters"]</label>
    <textarea asp-for="EventParameters" class="form-control" rows="5"></textarea>
    <span class="hint">@T["The event parameters in JSON format. You can use workflow expressions here."]</span>
</div>
